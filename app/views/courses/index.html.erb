<h1>Courses</h1>
<% @courses.each do |c| %>
<%= form_for c do |f| %>
  <%= f.text_field :name, placeholder: "Course Name", required: true %> Hours:
  <%= f.number_field :hours, placeholder: 0, :class => 'text_field', :step => 10, required: true %>
  <%= link_to "View Course Info", course_path(c) %>
  <%= f.submit 'Submit Changes' %>
  <% end %>

<% end %>
