

<h1>Registration for Faculty and Administration</h1>
<div class="frontpage">
  <div id="register" class="bluebox">
    <h2>Registration for Faculty and Administration</h2>
<%= form_for(@user) do |f| %>
<%= f.text_field :first_name, placeholder: 'Enter your first name', required: true  %>
<%= f.text_field :last_name, placeholder: 'Enter your last name', required: true  %> <br>
<%= f.text_field :email, placeholder: 'Enter your email', required: true %>
     <%= f.date_select :age, start_year: 1868, end_year: Date.today.year, required: true  %><br>
Highest Completed Education <%= f.select :education, ['HS', 'College', 'Masters', 'PHD'], required: true  %><br>

<%= f.password_field :password, placeholder: 'Create a password', required: true %>
<%= f.password_field :password_confirmation, placeholder: 'Confirm password', required: true %> <br>
<%= f.submit 'Register' %>
<% end %>
</div>
</div>
