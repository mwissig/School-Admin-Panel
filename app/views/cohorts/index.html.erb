<% if logged_in? %>
<h1>All Cohorts</h1>
<% Cohort.all.each do |co| %>
  <% @num_stu = 0 %>
  <% @students.each do |s| %>
    <% if co.id == s.cohort_id %>
    <% @num_stu += 1 %>
    <% end %>
  <% end %>
    <%= form_for co do |f| %>
    <%= link_to cohort_path(co) do %>
    <i class="far fa-eye"></i> <small>( <%= @num_stu %> students )</small>
  <% end %>
    <%= f.select :course_id, @courses, {:include_blank => 'Select a Course'} %>
    <%= f.text_field :name%>

    <%= f.text_field :start_date, class: 'datefield' %> to
    <%= f.text_field :end_date, class: 'datefield' %>
    <%= f.select :user_id, @instructors %>
    <%= button_tag( :class => "button") do %>
    <i class="fas fa-pencil-alt"></i>
  <% end %>
    <% end %>
    <% end %>

<%= form_for @cohort do |f| %> <i class="fas fa-plus"></i> New Cohort 
<%= f.select :course_id, @courses, {:include_blank => 'Select a Course'} %>
<%= f.text_field :name, placeholder: "Name"%>
<%= f.date_field :start_date, class: 'datefield' %> to
<%= f.date_field :end_date, class: 'datefield' %>
<%= f.hidden_field :user_id, value: 0 %>
<%= f.submit 'Create Cohort' %>
<% end %>
<% end %>
