


<% @cohorts.each do |co| %>
  <% @num_stu = 0 %>
  <% @students.each do |s| %>
    <% if co.id == s.cohort_id %>
    <% @num_stu += 1 %>
    <% end %>
  <% end %>
    <%= form_for co do |f| %>
    <%= f.select :course_id, @courses %>
    <%= f.text_field :name%>

    <%= f.text_field :start_date %> to
    <%= f.text_field :end_date %>
    <%= f.select :instructor_id, @instructors %>
    <%= f.submit 'Edit Cohort' %>
      <button onclick="window.location.href='cohort/<%= co.id %>'">View Students <i class="far fa-eye"></i></button>
      ( <%= @num_stu %> )
    <% end %>
    <% end %>

<%= form_for @cohort do |f| %>
<%= f.select :course_id, @courses %>
<%= f.text_field :name, placeholder: "Name"%>
<%= f.date_field :start_date %> to
<%= f.date_field :end_date %>
<%= f.hidden_field :instructor_id, value: 0 %>
<%= f.submit 'Create Cohort' %>
<% end %>
