<% if logged_in? %>
<h1>Create New Cohort</h1>
<% if current_user.admin_priv == 0 %>
<p>This form will assign you as the instructor for this cohort.</p>
  <%= form_for @cohort do |f| %>
    <%= f.select :course_id, @courses, required: true   %>
    <%= f.text_field :name, placeholder: "Name", required: true  %>
    <%= f.date_field :start_date, required: true   %> to
    <%= f.date_field :end_date, required: true   %>
    <%= f.hidden_field :instructor_id, value: current_user.id  %>
    <%= f.submit 'Create Cohort' %>
    <% end %>
  <% else %>
  <%= form_for @cohort do |f| %>
    <%= f.select :course_id, @courses, required: true   %>
    <%= f.text_field :name, placeholder: "Name", required: true  %>
    <%= f.date_field :start_date, required: true   %> to
    <%= f.date_field :end_date, required: true   %>
    <%= f.select :instructor_id, @instructors %>
    <%= f.submit 'Create Cohort' %>
    <% end %>
  <% end %>
<% end %>
