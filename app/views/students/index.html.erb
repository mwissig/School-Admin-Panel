<h1>Students</h1>
<span>ID#
Last Name
First Name
Email
Age
GPA
Education
Course
Cohort</span>

<div class ="students">
<% @students.each do |s| %>
<%= form_for(s) do |f| %>
<% @courses = [] %>
<% Course.all.each do |co| %>
<% arr = [] %>
<% arr << co.name %>
<% arr << co.id %>
<% @courses << arr %>
<% end %>
<span>
<% if s.id < 100 && s.id > 9 %>
<%= "0" + s.id.to_s %>
<% elsif s.id < 10 %>
<%= "00" + s.id.to_s %>
<% else %>
<%= s.id.to_s %>
<% end %>
<%= f.text_field :last_name, class: 'namefield' %>
<%= f.text_field :first_name, class: 'namefield' %>
 <%= f.text_field :email, class: 'emailfield' %>
 <%= f.number_field :age %>
 <%=  f.number_field :grade, :class => 'text_field', :step => 0.01 %>
 <%= f.select :education, ['HS', 'College', 'Masters', 'PHD'] %>
   <%= f.select :course_id, @courses %>

   <% if s.cohort_id != 0 %>
   <%= s.cohort_id %>
   <% else %>
   Not Assigned
   <% end %>
      <button onclick="window.location.href='students/<%= s.id %>'">View Student Profile <i class="far fa-eye"></i></button>
<%= f.submit 'Submit Changes' %> <i class="fas fa-pencil-alt"></i>
<% end %>
</span>
<% end %>

<%= form_for(@student) do |f| %>
<% @courses = [] %>
<% Course.all.each do |co| %>
<% arr = [] %>
<% arr << co.name %>
<% arr << co.id %>
<% @courses << arr %>
<% end %>
<span>
Add new student
<%= f.text_field :last_name, placeholder: "Last Name"%>
<%= f.text_field :first_name, placeholder: "First Name" %>
 <%= f.text_field :email, placeholder: "Email Address" %>
 <%= f.number_field :age, placeholder: "Age" %>
 <%= f.hidden_field :grade, value: 0.00, :class => 'text_field', :step => 0.01 %>
  <%= f.hidden_field :cohort_id, value: 0 %>
 <%= f.select :education, ['HS', 'College', 'Masters', 'PHD'] %>
   <%= f.select :course_id, @courses %>
<%= f.submit 'Add Student' %>
<% end %>
</span>

</div>
